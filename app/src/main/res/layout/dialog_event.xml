<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/mjn_while"
    android:layout_width="300dp"
    android:layout_height="240dp">

    <LinearLayout
        android:id="@+id/head_box"
        android:background="@color/mjn_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_event_title"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:textSize="16sp"
            android:textColor="@color/mjn_while"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_below="@+id/head_box"
        android:background="@color/mjn_default_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_margin="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_event_detail"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:id="@+id/dialog_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:id="@+id/dialog_event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_event_close"
            android:background="?selectableItemBackground"
            android:textColor="@color/mjn_primary"
            android:text="CLOSE"
            android:textStyle="bold"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dialog_event_go_to_map"
            android:background="?selectableItemBackground"
            android:textColor="@color/mjn_primary"
            android:text="GO TO MAP"
            android:padding="@dimen/activity_vertical_margin"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>