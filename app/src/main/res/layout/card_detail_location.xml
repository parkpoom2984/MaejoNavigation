<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/view_pager_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/location_image_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/detail_icon_favorite"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:src="@drawable/fav_blank" />

        </RelativeLayout>

        <TextView
            android:id="@+id/detail_location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:gravity="center_horizontal"
            android:textColor="@color/mjn_default_gray" />

        <TextView
            android:id="@+id/detail_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:gravity="center_horizontal"
            android:textColor="@color/mjn_default_gray" />

        <TextView
            android:id="@+id/location_floor_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp" />

        <View
            android:id="@+id/plan_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mjn_default_gray" />

        <FrameLayout
            android:id="@+id/plan_box_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mjn_while">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:gravity="center"
                android:padding="8dp"
                android:text="แสดงแผนผัง"
                android:textStyle="bold" />
        </FrameLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>